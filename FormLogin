    private void SignIn_buttonActionPerformed(java.awt.event.ActionEvent evt) {                                              
        // TODO add your handling code here:
        String username=FormRegister.username;
        String password=FormRegister.password;

        if(username.equalsIgnoreCase(user_field.getText()) && password.equalsIgnoreCase(pass_field.getText())){
            this.setVisible(false);
            new MenuPOS().setVisible(true);
        }
        else {
            javax.swing.JOptionPane.showMessageDialog(null, "Maaf, Username dan Password yang anda inputkan salah!!");
            user_field.setText("");
            pass_field.setText("");
            user_field.requestFocus();
        }




    }                                             

    private void register_buttonActionPerformed(java.awt.event.ActionEvent evt) {                                                
        // TODO add your handling code here:
    dispose();
    new FormRegister().setVisible(true);
    }                                               

