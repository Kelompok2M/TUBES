    }                                          

    private void show1ActionPerformed(java.awt.event.ActionEvent evt) {                                      
        // TODO add your handling code here:
        if(show1.isSelected())
            pass_field.setEchoChar((char)0);
        else
            pass_field.setEchoChar('*');  
    }                                     

