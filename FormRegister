    private void show1ActionPerformed(java.awt.event.ActionEvent evt) {                                      
        // TODO add your handling code here:
        if(show1.isSelected())
            pass_reg_field.setEchoChar((char)0);
        else
            pass_reg_field.setEchoChar('*');  
    }                                     

    private void show2ActionPerformed(java.awt.event.ActionEvent evt) {                                      
        // TODO add your handling code here:
        if(show2.isSelected())
            pass_reg_field2.setEchoChar((char)0);
        else
            pass_reg_field2.setEchoChar('*');      

    }                                     

