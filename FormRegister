    private void reg_buttonActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
//        String username;
//        String nomor_telp;
//        String email;
//        String password;
//        String repass;

            username = user_reg_field.getText();
            no_telp = telp_reg_field.getText();
            email = email_reg_field.getText();
            password = pass_reg_field.getText();
            repass = pass_reg_field2.getText();

        String sql = "insert into tb_register values (?,?,?,?,?)";

        if(password.equals(repass)){     
        dispose();
        new FormLogin().setVisible(true);
        }

        else{
        jLabel1.setText("Password yang anda input tidak sama");    
        }







    }                                          

    private void return_buttonActionPerformed(java.awt.event.ActionEvent evt) {                                              
        // TODO add your handling code here:
        dispose();
        new FormLogin().setVisible(true);
    }                                             

